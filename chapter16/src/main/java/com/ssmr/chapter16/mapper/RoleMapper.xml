<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmr.chapter16.dao.RoleDao">

	<select id="getRole" parameterType="long" resultType="com.ssmr.chapter16.pojo.Role">
		select id,role_name as roleName, note
		from t_role
		where id = #{id}
	</select>
	
    <update id="updateRole" parameterType="com.ssmr.chapter16.pojo.Role">
        update t_role 
        <set>
            <if test="roleName != null">role_name = #{roleName},</if>
            <if test="note != null">note = #{note},</if>
        </set>
        where id = #{id}
    </update>
</mapper>