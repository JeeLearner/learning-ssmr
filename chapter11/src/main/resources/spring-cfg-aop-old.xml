<?xml version='1.0' encoding='UTF-8' ?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
	http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

	<bean id="proxyFactoryBeanAspect" class="com.ssmr.chapter11.oldaop.ProxyFactoryBeanAspect" />

	<!--设定代理类 -->
	<bean id="roleService" class="org.springframework.aop.framework.ProxyFactoryBean">
		<!--这里代理的是接口 -->
		<property name="proxyInterfaces">
			<value>com.ssmr.chapter11.game.service.RoleService</value>
		</property>

		<!--是ProxyFactoryBean要代理的目标类 -->
		<property name="target">
			<bean class="com.ssmr.chapter11.game.service.impl.RoleServiceImpl" />
		</property>

		<!--定义通知 -->
		<property name="interceptorNames">
			<list>
				<!-- 引入定义好的spring bean -->
				<value>proxyFactoryBeanAspect</value>
			</list>
		</property>
	</bean>
</beans>