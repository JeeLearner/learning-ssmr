<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssmr.chapter05.dao.TaskDao">
    <select id="getTask" parameterType="long" resultType="com.ssmr.chapter05.pojo.Task">
        select id, title, context, note
        from t_task
        where id = #{id}
    </select>
</mapper>